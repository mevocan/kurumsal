<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= blog.title %> | Blog Detail</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/css/responsive.css">
</head>

<body>
    <div class="main-page-wrapper">
        <!-- Header -->
        <%- include('partials/header') %>

        <!-- Theme Inner Banner -->
        <div class="theme-inner-banner section-spacing">
            <div class="overlay">
                <div class="container">
                    <h2><%= blog.title %></h2>
                </div>
            </div>
        </div>

        <!-- Blog Details Section -->
        <div class="our-blog section-spacing">
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 col-lg-8 col-12">
                        <div class="post-wrapper blog-details">
                            <div class="single-blog">
                                <div class="image-box">
                                    <img src="<%= blog.image || '/images/default-blog.jpg' %>" alt="<%= blog.title %>">
                                    <div class="overlay">
                                        <a href="#" class="date"><%= new Date(blog.createdAt).toLocaleDateString() %></a>
                                    </div>
                                </div>
                                <div class="post-meta">
                                    <h5 class="title"><%= blog.title %></h5>
                                    <div><%- blog.content %></div>
                                </div>
                               
                            </div>
                        </div>
                        
                    </div>

                    <!-- Blog Sidebar -->
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-8 col-12 blog-sidebar">
                        
                        <div class="sidebar-container sidebar-recent-post">
                            <h5 class="title">Recent Posts</h5>
                            <ul>
                                <% recentPosts.forEach(post => { %>
                                <li class="clearfix">
                                    <img src="<%= post.image || '/images/default-blog.jpg' %>" alt="<%= post.title %>" class="float-left">
                                    <div class="post float-left">
                                        <a href="/blog/<%= post._id %>"><%= post.title %></a>
                                        <div class="date"><%= new Date(post.createdAt).toLocaleDateString() %></div>
                                    </div>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <%- include('partials/footer') %>

        <!-- Scroll Top Button -->
        <button class="scroll-top tran3s">
            <i class="fa fa-angle-up" aria-hidden="true"></i>
        </button>

        <%- include('partials/scs') %>
    </div>
</body>

</html>
